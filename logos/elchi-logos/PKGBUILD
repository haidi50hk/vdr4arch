pkgname=elchi-logos
pkgver=20140331
pkgrel=1
pkgdesc="Channellogos for skin Elchi"
arch=('any')
url="http://creimer.net/channellogos/"
depends=('vdr-skinelchi')
license=('GPL2')
source=("http://creimer.net/channellogos/elchiHD-logos-$pkgver.tar.gz")
md5sums=('3bd08c9e6009875dce07d9539aaa7e63')

package() {
  mkdir -p "$pkgdir/usr/share/vdr/plugins/skinelchi/logos"
  cd "$pkgdir/usr/share/vdr/plugins/skinelchi/logos"
  cp -r "$srcdir"/elchilogos/* .
}
